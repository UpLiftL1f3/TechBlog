<div class='post'>
  <div class='card'>
    <div class='card-header'>
      <h2>Create New Post</h2>
    </div>
    <div class='card-body'>
      <form>
        <label id='title'>Title</label>
        <input id='newPostTitle' />
        <label id='content'>Content</label>
        <textarea
          class='newCommentTextBox'
          id='newPostContent'
          rows='6'
          cols='10'
          placeholder='Type content here...'
        ></textarea>
        <button class='btn' id='createNewPostBtn'>Create</button>
      </form>
    </div>
  </div>
</div>

<script src='/js/new.js'></script>