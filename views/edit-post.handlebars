<div class='post'>
  <div class='card'>
    <div class='card-header'>
      <h2>Edit Post</h2>
    </div>
    <div class='card-body'>
      <form>
        <label for='title'>Title</label>
        <input type='text' id='edit-Title' value='{{post.title}}' />
        <label for='body-title'>Content</label>
        <textarea
          class='newCommentTextBox'
          type='text'
          id='edit-Content'
          rows='6'
          cols='10'
        >{{post.body}}</textarea>
        <button class='btn' id='edit-update'>Update</button>
        <button class='btn' id='edit-delete'>Delete</button>
        <button class='btn' id='edit-cancel'>Cancel</button>
      </form>
    </div>
  </div>
</div>

<script src='/js/edit.js'></script>