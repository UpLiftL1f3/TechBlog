<div class='posts list-group'>
  {{#each posts as |post|}}
    <a href='/dashboard/edit/{{post.id}}'>
      <div class='card-header flex-row justify-space-between'>
        <h2>{{post.title}}</h2>
        <p class='small'>Posted by
          {{post.User.username}}
          at
          {{format_date post.updatedAt}}</p>
      </div>
    </a>
    <br />
  {{/each}}
</div>